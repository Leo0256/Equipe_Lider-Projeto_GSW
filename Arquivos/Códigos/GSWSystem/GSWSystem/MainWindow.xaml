<Window x:Class="GSWSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:GSWSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1440" WindowState="Maximized" WindowStartupLocation="CenterScreen" Foreground="{x:Null}" MinWidth="1000" MinHeight="500">

    <Window.Resources>
        <DropShadowEffect 
                    x:Key="dropShadow" 
                    BlurRadius="20" 
                    Direction="270"
                    Color="Black"
                    />

        <Storyboard x:Key="MenuOpen">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="200"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MenuClose">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">

                        <Border 
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Transparent"
                            BorderThickness="1"/>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" TargetName="border" Value="Blue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <!--Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,10,0,10" />
            <Setter Property="Effect" Value="{StaticResource dropShadow}"/-->

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border 
                            x:Name="border" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            Background="{TemplateBinding Background}" 
                            SnapsToDevicePixels="True">

                            <ScrollViewer
                                x:Name="PART_ContentHost" 
                                Focusable="false" 
                                HorizontalScrollBarVisibility="Hidden" 
                                VerticalScrollBarVisibility="Hidden"/>

                        </Border>
                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter 
                                    Property="BorderBrush" 
                                    TargetName="border" 
                                    Value="#FF000000"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter 
                                    Property="BorderBrush" 
                                    TargetName="border" 
                                    Value="White"/>
                                <Setter 
                                    Property="Effect" 
                                    Value="{StaticResource dropShadow}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpenMenu">
            <BeginStoryboard Storyboard="{StaticResource MenuOpen}"/>
        </EventTrigger>

        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonCloseMenu">
            <BeginStoryboard Storyboard="{StaticResource MenuClose}"/>
        </EventTrigger>
    </Window.Triggers>

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFFFEE4F" Offset="1"/>
            <GradientStop Color="Transparent" Offset="0"/>
        </LinearGradientBrush>
    </Window.Background>


    <Grid Margin="0,0,0,0">

        <Rectangle
            Width="1440"
            Height="700"
            MinWidth="1000" 
            MinHeight="500"
            >
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#4C1D5E84" Offset="0"/>
                    <GradientStop Color="#00000000" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <ScrollViewer 
            Background="Transparent"
            Margin="0,80,0,30" 
            HorizontalContentAlignment="Center"
            VerticalScrollBarVisibility="Hidden">

            <StackPanel
                x:Name="Panel"
                Orientation="Vertical">

                <StackPanel.Resources>
                    <Style TargetType="{x:Type Frame}">
                        <Setter Property="Margin" Value="0,0,0,20"/>
                    </Style>
                    
                </StackPanel.Resources>

                <!--
                <Frame 
                    x:Name="Frame" 
                    Width="1440" 
                    NavigationUIVisibility="Hidden"
                    VerticalAlignment="Top"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                    />
                -->
                
            </StackPanel>
            
            
            
        </ScrollViewer>

        <StackPanel 
            Height="60" 
            VerticalAlignment="Top"  
            Orientation="Horizontal"
            Background="#FF0F3460">

            <Grid Background="Transparent">
                <Button 
                        x:Name="ButtonCloseMenu"
                        Width="75" 
                        Height="60" 
                        Background="{x:Null}" 
                        BorderBrush="{x:Null}" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Left"
                        Visibility="Collapsed"
                        Click="CloseMenu">

                    <materialDesign:PackIcon  
                            Width="45"
                            Height="45"
                            Foreground="White" 
                            Kind="ArrowLeft"/>

                </Button>

                <Button 
                        x:Name="ButtonOpenMenu"
                        Width="75" 
                        Height="60" 
                        Background="{x:Null}" 
                        BorderBrush="{x:Null}" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        Click="OpenMenu">

                    <materialDesign:PackIcon  
                            Width="50"
                            Height="50"
                            Foreground="White" 
                            Kind="Menu"/>

                </Button>
            </Grid>
        </StackPanel>

        <DockPanel HorizontalAlignment="Right"  VerticalAlignment="Top" Margin="0,11,28,0"  >
            <Image 
                Height="27"
                Width="27"
                Margin="0,0,10,0"
                Source="/imagens/lupa.png"/>

            <TextBox 
                x:Name="Text"
                Text="" 
                TextWrapping="NoWrap" 
                Height="39" 
                Width="547"
                FontFamily="Arial" 
                FontSize="22" 
                MaxLines="1" 
                
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                VerticalContentAlignment="Center"
                Padding="40,0,10,0"
                
                Background="{x:Null}"
                BorderBrush="White" 
                Foreground="White" 
                BorderThickness="1,1,1,1"
                
                SelectionBrush="White"
                SelectionTextBrush="White" 
                CaretBrush="white" 
                
                HorizontalScrollBarVisibility="Disabled"
                KeyDown="EntradaTexto"
                Style="{DynamicResource ResourceKey=TextBoxStyle}">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </TextBox.Resources>

            </TextBox>

        </DockPanel>

        
        <Grid x:Name="GridMenu" Margin="0,60,0,0" Width="0" Background="#FF0F3460" HorizontalAlignment="Left">

            <StackPanel>

                <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListViewItem Height="60" Selected="ViewProjeto">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="File"
                                VerticalAlignment="Center" />

                            <TextBlock 
                                Margin="20,10"
                                FontFamily="Arial"
                                FontSize="15" 
                                Foreground="White" 
                                VerticalAlignment="Center" 
                                Text="Projeto"/>
                        </StackPanel>

                    </ListViewItem>

                    <ListViewItem Height="60" Selected="ViewHorasFuncionario">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="AccountCircle"
                                VerticalAlignment="Center" />

                             <TextBlock 
                                Margin="20,5"
                                FontFamily="Arial"
                                FontSize="15" 
                                Foreground="White" 
                                VerticalAlignment="Center" 
                                Text="Horas Funcionario"
                                MaxWidth="100"
                                TextWrapping="Wrap"/>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem Height="60" Selected="ViewHorasProjeto">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="QueryBuilder"
                                VerticalAlignment="Center" />

                            <TextBlock 
                                Margin="20,5"
                                FontFamily="Arial"
                                FontSize="15" 
                                Foreground="White" 
                                VerticalAlignment="Center" 
                                Text="Horas por Projeto"
                                MaxWidth="100"
                                TextWrapping="Wrap"/>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem Height="60" Selected="ViewHorasAno">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="FileChart"
                                VerticalAlignment="Center" />

                            <TextBlock 
                                Margin="20,5"
                                FontFamily="Arial"
                                FontSize="15" 
                                Foreground="White" 
                                VerticalAlignment="Center" 
                                Text="Horas por Ano"
                                MaxWidth="100"
                                TextWrapping="Wrap"/>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem Height="60"  Selected="ViewHorasMes">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="FileDocument"
                                VerticalAlignment="Center" />

                            <TextBlock 
                                Margin="20,5"
                                FontFamily="Arial"
                                FontSize="15" 
                                Foreground="White" 
                                VerticalAlignment="Center" 
                                Text="Horas por Mês"
                                MaxWidth="100"
                                TextWrapping="Wrap"/>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem Height="60"  Selected="ViewDedicacao">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="ChartPie"
                                VerticalAlignment="Center" />

                            <TextBlock 
                                Margin="20,10"
                                FontFamily="Arial"
                                FontSize="15" 
                                Foreground="White" 
                                VerticalAlignment="Center" 
                                Text="% Dedicação"/>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem Height="60"  Selected="ViewQuantStatus">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="Abacus"
                                VerticalAlignment="Center" />

                            <TextBlock 
                                Margin="20,5"
                                FontFamily="Arial"
                                FontSize="15" 
                                Foreground="White" 
                                VerticalAlignment="Center" 
                                Text="Quantidade de Status"
                                MaxWidth="100"
                                TextWrapping="Wrap"/>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem Height="60"  Selected="ViewTasksAbertas">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="CalendarTask"
                                VerticalAlignment="Center" />

                            <TextBlock 
                                Margin="20,5"
                                FontFamily="Arial"
                                FontSize="15" 
                                Foreground="White" 
                                VerticalAlignment="Center" 
                                Text="Tasks Abertas"
                                MaxWidth="100"
                                TextWrapping="Wrap"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>


            </StackPanel>

        </Grid>

    </Grid>
</Window>
