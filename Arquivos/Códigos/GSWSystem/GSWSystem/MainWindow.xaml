<Window x:Class="GSWSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GSWSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440" WindowState="Normal" WindowStartupLocation="CenterScreen">

    <Window.Resources>


        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">

                        <Border 
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Transparent"
                            BorderThickness="1"/>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" TargetName="border" Value="Blue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
    </Window.Resources>


    <Grid Margin="0,0,0,0">
        <StackPanel 
            Height="100" 
            VerticalAlignment="Top"  
            Orientation="Horizontal"
            Background="#FF0F3460">

            <Button 
                HorizontalAlignment="Left" 
                Margin="27,10,0,0" 
                VerticalAlignment="Top" 
                Height="50" 
                Width="50" 
                Foreground="{x:Null}" 
                BorderBrush="{x:Null}"
                Click="HomeClick" 
                Style="{DynamicResource ButtonStyle}" >

                <Button.Background>
                    <ImageBrush ImageSource="/imagens/icon.png" Stretch="Uniform"/>
                </Button.Background>

            </Button>

        </StackPanel>

        <TextBox 
            HorizontalAlignment="Right" 
            Margin="0,25,30,0" 
            Text="" 
            TextWrapping="NoWrap" 
            VerticalAlignment="Top"
            Width="547" 
            Background="#FFD9D9D9"
            BorderBrush="Black" 
            Height="50" 
            FontFamily="Arial" 
            FontSize="22" 
            BorderThickness="1,1,1,1"
            Padding="10,0,40,0" 
            VerticalContentAlignment="Center"
            SelectionBrush="#B2919191"
            SelectionTextBrush="#B2919191" 
            CaretBrush="Black" MaxLines="1">

            <TextBox.Resources>

                <DropShadowEffect 
                    x:Key="dropShadow" 
                    BlurRadius="0" 
                    Direction="270"
                    Color="Black"
                    />



                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>

                <Style TargetType="TextBox">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Margin" Value="0,10,0,10" />
                    <Setter Property="Effect" Value="{StaticResource dropShadow}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border 
                                    x:Name="border" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    Background="{TemplateBinding Background}" 
                                    SnapsToDevicePixels="True">

                                    <ScrollViewer
                                        x:Name="PART_ContentHost" 
                                        Focusable="false" 
                                        HorizontalScrollBarVisibility="Hidden" 
                                        VerticalScrollBarVisibility="Hidden"/>

                                </Border>
                                <ControlTemplate.Triggers>

                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter 
                                            Property="BorderBrush" 
                                            TargetName="border" 
                                            Value="#FF0F3460"/>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="true">
                                        <Setter 
                                            Property="BorderBrush" 
                                            TargetName="border" 
                                            Value="Black"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

            </TextBox.Resources>

        </TextBox>

        <Image 
            HorizontalAlignment="Right" 
            Height="39"
            Margin="0,31,527,0" 
            VerticalAlignment="Top"
            Width="38"
            Source="/imagens/lupa.png"/>

        <!--/menu-->

        <Frame x:Name="Frame" Margin="0,120,0,0" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
